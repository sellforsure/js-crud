{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main>
  <section>
    <h1 class='title'>Список товарів</h1>
      {{#with data.products}}
        {{#if isEmpty}}
          <h2>Список товару пустий</h2>
        {{else}}
          <ul class='product__list'>
            {{#each list}}
              <li>
                <div class='product__card'>
                  <h1 class='product__card-name'>
                    {{name}}
                  </h1>
                  <p class='product__card-description'>
                    {{description}}
                  </p>
                  <span class='product__card-id'>
                    ID:{{id}}
                  </span>
                  <div class='product__card-footer'>
                    <div class='product__card-price'>
                      {{price}}
                    </div>
                    <a
                      href='/product-edit?id={{id}}'
                      class='button'
                    >Редагувати</a>
                  </div>
                </div>
              </li>
            {{/each}}
          </ul>
        {{/if}}
      {{/with}}
    </div>
  </section>

</main>

