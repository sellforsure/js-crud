{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main>
  <section>
    <h1 class='title'>Список товарів</h1>
    <div method='POST' action='/product-list'>
      {{#with data.products}}
        {{#if isEmpty}}
          <mark>Список товару пустий</mark>
        {{else}}
          <ul>
            {{#each list}}
              <li>
                <div>
                  <h1>
                    {{name}}
                  </h1>
                  <p>
                    {{description}}
                  </p>
                  <span>
                    {{id}}
                  </span>
                  <div>
                    {{price}}
                  </div>
                  <a
                    href='/product-edit?id={{id}}'
                    class='button'
                  >Редагувати</a>

                </div>
              </li>
            {{/each}}
          </ul>
        {{/if}}
      {{/with}}
    </div>
  </section>

</main>

